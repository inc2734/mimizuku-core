{
  "name": "inc2734/mimizuku-core",
  "description": "This library is core of WordPress theme mimizuku",
  "license": "GPL-2.0+",
  "version": "1.0.5",
  "require": {
    "php": ">=5.6",
    "inc2734/wp-breadcrumbs": ">=0.3.2",
    "inc2734/wp-oembed-blog-card": ">=1.0.2",
    "inc2734/wp-view-controller": ">=2.1.4",
    "inc2734/wp-basis": ">=0.4.2",
    "inc2734/wp-customizer-framework": ">=2.1.2",
    "inc2734/wp-github-theme-updater": ">=0.2.2",
    "inc2734/wp-share-buttons": ">=0.5.3",
    "inc2734/wp-seo": ">=0.4.2",
    "inc2734/wp-like-me-box": ">=0.1.2",
    "inc2734/wp-pure-css-gallery": ">=0.1.4",
    "inc2734/wp-awesome-widgets": ">=1.0.2",
    "inc2734/wp-awesome-components": ">=0.3.2",
    "inc2734/wp-contents-outline": ">=0.1.3",
    "inc2734/wp-profile-box": ">=0.1.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpmd/phpmd": "2.*",
    "phpunit/phpunit": "^5.7"
  },
  "authors": [
    {
      "name": "Takashi Kitajima",
      "email": "inc@2inc.org"
    }
  ],
  "autoload": {
    "psr-4" : {
      "Inc2734\\Mimizuku_Core\\" : "src"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "vendor/bin/phpcs -p -s -v -n . --standard=./codesniffer.ruleset.xml --extensions=php",
      "vendor/bin/phpmd ./ text phpmd.ruleset.xml --suffixes php --exclude /vendor/,/tests/",
      "bash bin/phpunit.sh"
    ]
  }
}
